@page "/login"
@using System.ComponentModel.DataAnnotations
@using ContactsApp.Frontend.Models
@using ContactsApp.Frontend.Providers
@inject HttpClient Http
@inject NavigationManager Navigation
@inject CustomAuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Log in</PageTitle>

<h1>Log in</h1>

<EditForm Model="accountData" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Email:</label>
        <InputText @bind-Value="accountData.email" />
    </div>

    <div>
        <label>Password:</label>
        <InputText @bind-Value="accountData.password" type="password" />
    </div>

    <div>
        <button type="submit">Log in</button>
    </div>
</EditForm>

@code {
    private AccountData accountData = new AccountData();

    // send login request
    private async Task Submit()
    {
        // cookie is guaranteed with useCookies=true
        var postResult = await Http.PostAsJsonAsync("login?useCookies=true", accountData);

        if (postResult.IsSuccessStatusCode) Navigation.NavigateTo("");

        // to refresh the sidebar buttons
        AuthenticationStateProvider.RefreshAuthenticationState();   
    }
}
